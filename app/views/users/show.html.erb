<div class="container">
    <div class="row">
        <div class="col-12 col-lg-4">
            <div class="hoooyah-box">

              <div class="row">
                <div class="col-12">
                  <%= image_tag 'user.png', class: 'mx-auto d-block profile-img' %>
                </div>
              </div>
              <br />
              <div class="row">
                <div class="col-12 text-center">
                  <h6><strong><%= @user.email %></strong></h6>
                  <h6>Member since:<br /><strong><%= @user.created_at.strftime("%B %d, %Y") %></strong></h6>
                  <h6><strong><%= @user.comments.count %></strong> total comments</h6>
                  <h6><strong><%= @user.comments.where(rating: 'ðŸŒŸðŸŒŸðŸŒŸðŸŒŸðŸŒŸ').count %></strong> total 5 star reviews</h6>
                </div>
              </div>
              <div class="clear"></div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="hoooyah-box">
                <h2 class="text-center">My Comments:</h2>
                <hr>
                <br class="clear" />
                <div class="row">
                    <% @user.comments.each do |comment| %>
                        <div class="col-12 col-lg-6">
                            <h3 class="text_center"><%= link_to comment.place.name, place_path(comment.place) %></h3>
                            <blockquote>
                                <% if comment.humanized_rating.present? %>
                                <div class="clear">
                                    <b> <%= comment.rating %> </b>
                                </div>
                                <div class="clear">
                                    <b> <%= comment.message %> </b>
                                </div>
                                <div class="clear">
                                    <em><%= comment.user.email %></em>
                                </div>
                                <% end %>
                            </blockquote>
                            <br />
                        </div>
                    <% end %>
                </div>

                <div class="clear"></div>
                <h2 class="text-center">My Places:</h2>
                <hr>
                <br class="clear" />
                <div class="row">
                    <% @user.places.each do |place| %>
                        <div class="col-12 col-lg-6 hoooyah-box">
                            <h3><%= link_to place.name, place_path(place) %></h3>
                            <p><em><%= place.address %></em></p>
                            <p><%= place.description %></p>

                                <% if place.photos.present? %>
                                    <div class="row">
                                        <div class="col-12">
                                            <%= image_tag place.photos.last.picture, class: 'img-fluid' %>
                                        </div>
                                    </div>
                                <% end %>
                            <br />
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
